<Application x:Class="Horizon.Server.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Horizon.Server">
    <Application.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary>
                <local:Bootstrapper x:Key="Bootstrapper" />
            </ResourceDictionary>
           <ResourceDictionary Source="Style/Button.xaml"/>
           <ResourceDictionary Source="Style/TitleBar.xaml"/>
           <ResourceDictionary Source="Style/Navigation.xaml"/>
           <ResourceDictionary Source="Style/Listbox.xaml"/>
           <ResourceDictionary Source="Style/ContextMenu.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
